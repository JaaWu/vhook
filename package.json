{
  "name": "v3hook",
  "version": "0.0.1",
  "description": "Vue Composition Function",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "author": "lmhcoding",
  "private": false,
  "sideEffects": false,
  "files": [
    "lib/",
    "esm/"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https//github.com/lmhcoding/composition-fn"
  },
  "homepage": "https://github.com/lmhcoding/composition-fn#readme",
  "bugs": {
    "url": "https://github.com/lmhcoding/composition-fn/issues"
  },
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "scripts": {
    "cm": "cz",
    "lint": "eslint {src,tests}/**/*.ts",
    "lint:fix": "npm run lint --fix",
    "lint:types": "tsc --noEmit",
    "lint:prettier": "prettier --write src/**/*.ts",
    "build:cjs": "tsc",
    "build:es": "tsc -m esNext --outDir esm",
    "build": "npm-run-all build:*",
    "clean": "rimraf lib",
    "release": "semantic-release",
    "test": "jest"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.0.6",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "@vue/test-utils": "^2.0.0-beta.5",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.9.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^6.2.2",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.1.1",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "vue": "^3.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
